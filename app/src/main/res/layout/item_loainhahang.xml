<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="55dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_itemLoaiNH"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/item_loainhahang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imv_itemLoaiNH"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginVertical="7dp"
            android:layout_marginStart="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_sushi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_itemTenLoaiNH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:text="sushi"
            app:layout_constraintStart_toEndOf="@+id/imv_itemLoaiNH"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>