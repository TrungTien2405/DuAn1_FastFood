<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dialog_bogocdialog"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="25dp"
        android:background="@drawable/layout_topdialog"
        android:text="Thông tin đăng ký"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:fontFamily="@font/asap_medium"
        android:textAlignment="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/view_avatar5"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="45dp"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="20dp"
            tools:ignore="MissingConstraints">
            <ImageView
                android:id="@+id/imv_dialogHinhTTDK"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_addimage"
                tools:layout_editor_absoluteX="29dp" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="-10dp"
                android:text="Họ tên"
                android:fontFamily="@font/asap_medium"/>
            <TextView
                android:id="@+id/tv_dialogHoTenTTDK"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_edt"
                android:padding="10dp"
                android:fontFamily="@font/asap_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="-10dp"
                android:fontFamily="@font/asap_medium"/>
            <TextView
                android:id="@+id/tv_dialogSoDTTTDK"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:fontFamily="@font/asap_medium"
                android:background="@drawable/custom_edt"
                android:padding="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-10dp"
            android:fontFamily="@font/asap_medium"/>
        <TextView
            android:id="@+id/tv_dialogMatKhauTTDK"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/asap_medium"
            android:background="@drawable/custom_edt"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="-10dp"
            android:fontFamily="@font/asap_medium"/>
        <TextView
            android:id="@+id/tv_dialogDiaChiTTDK"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/asap_medium"
            android:background="@drawable/custom_edt"
            android:padding="10dp"/>
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/layout_bottomdialog">

        <TextView
            android:id="@+id/tv_dialogXacNhanTTDK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/asap_medium"
            android:text="Xác nhận"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.536"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>