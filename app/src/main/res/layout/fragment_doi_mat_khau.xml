<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fagment.DoiMatKhauFragment"
    android:orientation="vertical"
    android:background="@color/mauchinh">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imv_TroVe"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_trove"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:text="Đổi mật khẩu"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:fontFamily="@font/asap_medium"/>
    </LinearLayout>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_pizza"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="220dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FastFood"
        android:fontFamily="@font/asap_medium"
        android:textColor="@color/white"
        android:layout_marginTop="-50dp"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:passwordToggleEnabled="true"
        android:id="@+id/tip_matKhauCu">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="15dp"
            android:inputType="textPassword"
            android:hint="Nhập mật khẩu cũ"
            android:background="@drawable/custom_edt"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:passwordToggleEnabled="true"
        android:id="@+id/tip_matKhauMoi">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="15dp"
            android:inputType="textPassword"
            android:hint="Nhập mật khẩu mới"
            android:background="@drawable/custom_edt"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:passwordToggleEnabled="true"
        android:id="@+id/tip_xacNhanMatKhau">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="15dp"
            android:inputType="textPassword"
            android:hint="Nhập lại mật khẩu mới"
            android:background="@drawable/custom_edt"/>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Đồng ý"
            android:id="@+id/btnDongYDMK"
            android:background="@drawable/custom_edt"
            android:textColor="@color/mauchinh"
            android:fontFamily="@font/asap_medium"/>
        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Hủy"
            android:id="@+id/btnHuyDMK"
            android:background="@drawable/custom_edt"
            android:textColor="@color/mauchinh"
            android:fontFamily="@font/asap_medium"/>
    </LinearLayout>
</LinearLayout>