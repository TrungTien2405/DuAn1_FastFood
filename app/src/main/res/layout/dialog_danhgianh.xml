<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView34"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/sourceserifpro_semibold"
        android:gravity="center"
        android:text="Bạn có hài lòng với nhà hàng của chúng tôi không?"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/asap_medium"
        android:gravity="center"
        android:text="Những đánh giá của bạn sẽ được chúng tôi ghi nhận và xem xét. Nhằm đưa đến cho khách hàn một trải nhiệm tốt nhất trên ứng dụng của chúng tôi"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView34" />

    <ToggleButton
        android:id="@+id/tg_danhGia1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/toggle_danhgia"
        android:text=""
        android:textOff=""
        android:textOn=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView35" />

    <ToggleButton
        android:id="@+id/tg_danhGia2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/toggle_danhgia"
        android:text=""
        android:textOff=""
        android:textOn=""
        app:layout_constraintStart_toEndOf="@+id/tg_danhGia5"
        app:layout_constraintTop_toBottomOf="@+id/textView35" />

    <ToggleButton
        android:id="@+id/tg_danhGia3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/toggle_danhgia"
        android:text=""
        android:textOff=""
        android:textOn=""
        app:layout_constraintStart_toEndOf="@+id/tg_danhGia1"
        app:layout_constraintTop_toBottomOf="@+id/textView35" />

    <ToggleButton
        android:id="@+id/tg_danhGia4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/toggle_danhgia"
        android:text=""
        android:textOff=""
        android:textOn=""
        app:layout_constraintStart_toEndOf="@+id/tg_danhGia3"
        app:layout_constraintTop_toBottomOf="@+id/textView35" />

    <ToggleButton
        android:id="@+id/tg_danhGia5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/toggle_danhgia"
        android:text=""
        android:textOff=""
        android:textOn=""
        app:layout_constraintStart_toEndOf="@+id/tg_danhGia4"
        app:layout_constraintTop_toBottomOf="@+id/textView35" />

    <Button
        android:id="@+id/btn_dialogGuiDanhGiaNH"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/custom_btnadd_basket"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Đánh giá nhà hàng"
        app:layout_constraintTop_toBottomOf="@+id/tg_danhGia4"
        tools:layout_editor_absoluteX="155dp" />
</androidx.constraintlayout.widget.ConstraintLayout>