<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="330dp"
    android:orientation="vertical"
    android:background="@drawable/custom_item_monan">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="Chỉnh sửa"
        android:textSize="12dp"
        android:fontFamily="@font/asap_medium"
        android:textColor="@color/black"
        android:id="@+id/tv_ChinhSuaMA"
        android:gravity="right"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Chicken Katsu Curry"
        android:id="@+id/tv_TenMonAn"
        android:fontFamily="@font/vollkorn_variablefont_wght"
        android:textSize="18dp"
        android:textAlignment="center"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:id="@+id/imv_HinhMA"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="10dp"
        android:layout_marginLeft="5dp"
        android:paddingHorizontal="10dp"
        android:textAlignment="center"
        android:id="@+id/tv_ChiTietMA" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/item_tien_monan"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textAlignment="center"
            android:fontFamily="@font/asap_medium"
            android:id="@+id/tv_GiaMA"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imv_ChonMA"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_cong"/>
    </LinearLayout>
</LinearLayout>