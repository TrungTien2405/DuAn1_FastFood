<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fagment.MonAnCTFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="320dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/custom_mact">
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/imv_TroVe"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_trove"/>
            <ImageView
                android:id="@+id/imv_toGioHang"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="290dp"
                android:src="@drawable/ic_giohangs"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/view_avatar"
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            app:cardCornerRadius="50dp"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imv_hinhMonAnCT"
                android:padding="20dp"
                android:src="@drawable/chickenkat"
                android:scaleType="centerCrop"
                tools:layout_editor_absoluteX="29dp"
                android:background="@drawable/custom_bogoc_hinhanh"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_soluong_mact"
        android:layout_marginTop="-28dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:src="@drawable/ic_tru"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/tv_soLuongMACT"
            android:text="1"
            android:fontFamily="@font/asap_medium"
            android:textSize="30dp"
            android:textColor="#D77367"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_cong"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chicken Katsu Curry"
        android:layout_marginLeft="10dp"
        android:textSize="24dp"
        android:id="@+id/tv_tenMonAnCT"
        android:fontFamily="@font/vollkorn_variablefont_wght"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ScrollView
            android:layout_width="280dp"
            android:layout_height="50dp">
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Succulent crispy chicken"
                android:id="@+id/tv_chiTietMonAnCT"
                android:fontFamily="@font/vollkorn_variablefont_wght"/>
        </ScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_giaMonAnCT"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/asap_medium"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:background="@drawable/custom_search">
            <ImageView
                android:id="@+id/imv_icCar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_car"/>
            <TextView
                android:id="@+id/tv_PhiVanChuyenMACT"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:textSize="16dp"
                android:textAlignment="center"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/asap_medium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:background="@drawable/custom_search">
            <ImageView
                android:id="@+id/imv_icDongHo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_dongho"/>
            <TextView
                android:id="@+id/tv_ThoiGianMACT"
                android:layout_width="70dp"
                android:textSize="16dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/asap_medium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:background="@drawable/custom_search">
            <ImageView
                android:id="@+id/imv_icSao"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_ngoisao"/>
            <TextView
                android:id="@+id/tv_DanhGiaMACT"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="9dp"
                android:textSize="16dp"
                android:textAlignment="center"
                android:fontFamily="@font/asap_medium"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ingredients: "
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/asap_medium"
        android:textSize="30dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/rcv_monAnThemCT"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_btnadd_basket"
        android:text="Thêm vào giỏ hàng"
        android:textSize="24dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/asap_medium"/>

</LinearLayout>