<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginVertical="10dp"
    android:background="@drawable/custom_edt">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <CheckBox
            android:buttonTint="@color/mauchinh"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:id="@+id/chk_ItemChonGH"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/view_avatar2"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imv_itemHinhGH"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/item_bogoc"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/im1" />


        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_itemTenMonGH"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:text="Chicken"
            android:fontFamily="@font/merriweather_bold"
            android:textColor="@color/black"
            android:textSize="22dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_itemTenMonThemGH"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:text="Tên món thêm"
            android:textColor="@color/black"
            android:textSize="14dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mauchinh"
            android:fontFamily="@font/number"
            android:id="@+id/tv_itemGiaGH"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:text="5 $"
            android:textSize="20dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_soluong_giohang"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_itemTruSoLuongGH"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_tru"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_itemSoLuongGH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#D77367"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@+id/img_itemCongSoLuongGH"
                app:layout_constraintStart_toEndOf="@+id/img_itemTruSoLuongGH"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_itemCongSoLuongGH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_cong"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>