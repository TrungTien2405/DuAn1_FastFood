<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DangNhapActivity"
    android:orientation="vertical"
    android:background="@color/mauchinh">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="330dp"
        android:textSize="20dp"
        android:id="@+id/tv_DangKy"
        android:fontFamily="@font/asap_medium"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Đăng ký"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_pizza"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="220dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FastFood"
        android:fontFamily="@font/asap_medium"
        android:textColor="@color/white"
        android:layout_marginTop="-50dp"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_gravity="center" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FastFood luôn ở bên bạn!"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:fontFamily="@font/asap_medium"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/tip_SDT">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="15dp"
            android:hint="Nhập số điện thoại"
            android:background="@drawable/custom_edt"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:passwordToggleEnabled="true"
        android:layout_margin="10dp"
        android:id="@+id/tip_MatKhau">
        <com.google.android.material.textfield.TextInputEditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mật khẩu"
            android:padding="15dp"
            android:background="@drawable/custom_edt"/>
    </com.google.android.material.textfield.TextInputLayout>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lưu mật khẩu"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:fontFamily="@font/asap_medium"
        android:id="@+id/chkLuuMK" />
    <Button
        android:id="@+id/btnDangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:textColor="@color/mauchinh"
        android:background="@drawable/custom_edt"
        android:fontFamily="@font/asap_medium"
        android:text="Đăng nhập"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="italic"
        android:fontFamily="@font/asap_medium"
        android:id="@+id/tv_QuenMatKhau"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Quên mật khẩu?"/>
</LinearLayout>