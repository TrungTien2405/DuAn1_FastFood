<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="115dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_itemMonAnThem"
        android:layout_width="60dp"
        android:layout_height="95dp"
        android:layout_margin="10dp"
        android:background="@drawable/item_loainhahang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imv_itemMonAnThem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="7dp"
            android:layout_marginTop="28dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_sushi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_itemTenMonAnThem"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="sushi"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imv_itemMonAnThem" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>